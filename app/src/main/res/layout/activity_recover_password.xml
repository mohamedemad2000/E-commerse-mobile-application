<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Recover_password">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <EditText
        android:id="@+id/mail_recovery_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/guid11"
        android:layout_margin="20dp"
        android:hint="Enter your User Name"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/get_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_recovery_pass"
        android:layout_margin="20dp"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:background="#00BFA5"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/pass_recovered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/get_pass"
        android:textSize="19sp"
        android:padding="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>